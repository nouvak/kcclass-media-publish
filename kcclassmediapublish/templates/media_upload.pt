<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal">
	<head>
		<title>KC Class Media upload</title>
		<meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
		<meta name="keywords" content="python web application" />
		<meta name="description" content="pyramid web application" />
		<link rel="shortcut icon" href="${request.static_url('kcclassmediapublish:static/favicon.ico')}" />
		<link href="${request.static_url('kcclassmediapublish:static/css/bootstrap.css')}" rel="stylesheet" />
		<link href="${request.static_url('kcclassmediapublish:static/css/main.css')}" rel="stylesheet" />
	</head>
	<body>
		<div style="background-color: grey;">
			<img src="${request.static_url('kcclassmediapublish:static/img/kc-class-logo.png')}"></img>
		</div>
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span3">
					<!--Sidebar content-->
					<ul class="sidebar-menu nav nav-pills nav-stacked">
						<li><a href="/">List published media contents</a></li>
						<li class="active"><a href="/media-upload">Publish new media content</a></li>
					</ul>
				</div>
				<div class="span9">
					<!--Body content-->
					<h1>Upload media content</h1>
					<form class="form-horizontal" action="/upload-media-confirm" method="post" accept-charset="utf-8" enctype="multipart/form-data">
						<fieldset>
							<legend>File</legend>				
							<div class="control-group">
								<div class="controls">
									<input id="filepath" name="filepath" type="file" value="" />
								</div>
							</div>
						</fieldset>
			
						<fieldset>
							<legend>Media site</legend>
							
							<div class="control-group">
								<div class="controls">
									<select id="media-site" name="media-site">
										<option value="youtube">Youtube</option>
										<option value="picasaweb">PicasaWeb</option>
										<option value="slideshare">Slideshare</option>
										<option value="flickr">Flickr</option>
									</select>
								</div>
							</div>
			
						</fieldset>
									
						<fieldset>
							<legend>Authentication data</legend>
			  				
							<div class="control-group">
				  				<label for="username" class="control-label">Username</label>
								<div class="controls">  
									<input id="username" name="username" type="text" value="" />  
								</div>  
							</div>
			
							<div class="control-group">
				  				<label for="password" class="control-label">Password</label>
								<div class="controls">  
									<input id="password" name="password" type="text" value="" />  
								</div>  
							</div>
						</fieldset>
						
						<fieldset>
							<legend>Media metadata</legend>
							
							<div class="control-group">
				  				<label for="title" class="control-label">Title</label>
								<div class="controls">  
									<input id="title" name="title" type="text" value="" />  
								</div>  
							</div>
			
							<div class="control-group">
				  				<label for="description" class="control-label">Description</label>
								<div class="controls">  
									<textarea id="description" name="description" rows="5" cols="20"></textarea>  
								</div>  
							</div>
			
							<div class="control-group">
				  				<label for="tags" class="control-label">Tags</label>
								<div class="controls">  
									<input id="tags" name="tags" type="text" value="" />  
								</div>  
							</div>
							
							<div class="control-group">
				  				<label for="category" class="control-label">Category</label>
								<div class="controls">  
									<input id="category" name="category" type="text" value="" />  
								</div>  
							</div>
							
							<div class="control-group">
				  				<label for="access" class="control-label">Access</label>
								<div class="controls">  
									<label class="radio">
										<input type="radio" name="access" id="public" checked="checked" />
										Public
									</label>
									<label class="radio">
										<input type="radio" name="access" id="private" />
										Private
									</label>
								</div>  
							</div>
							
						</fieldset>
									
						<div class="form-actions">
							<button type="submit" class="btn btn-primary">Upload</button>
						</div>			
					</form>
					
				</div>
			</div>
		</div>
				
		<script src="${request.static_url('kcclassmediapublish:static/js/jquery.js')}"></script>
		<script src="${request.static_url('kcclassmediapublish:static/js/bootstrap.js')}"></script>
	</body>
</html>
